<%- include('./create.ejs') %>

<div id="milestone-header"
  class="container mobile-box b3 h-center noselect padding-5 pointer border shadow-lg-st radius-5 lucida-grande">
  <div class="mobile-box container">
    <div class="mobile-box v-center margin-right-5 lucida-grande bold text-shadow">Metas</div>
    <img class="image-prop size-20 v-center" src="/images/icon/milestone.png">
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", async () => {
    let goal_header = document.getElementById("goal-header");
    let milestone_header = document.getElementById("milestone-header");
    let task_header = document.getElementById("task-header");

    milestone_header.addEventListener("click", async () => {
      let goal_box = document.getElementById("goal-box");
      let milestone_box = document.getElementById("milestone-box");
      let task_box = document.getElementById("task-box");
      lib.display(goal_box, "none");
      lib.displayDiv(milestone_box, document.getElementById("task-header"));
      lib.display(task_box, "none");

      if(milestone_box.style.display != "none") {
        lib.removeCss(goal_header, ["shadow-st"]);
        lib.addCss(milestone_header, ["shadow-st"]);
        lib.removeCss(task_header, ["shadow-st"]);
      } else {
        lib.removeCss(milestone_header, ["shadow-st"]);
      }
    });
  });
</script>